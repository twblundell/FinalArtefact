                android:checked="false"
                android:text="Stamford Bridge, Chelsea F.C."
                android:textColor="#0071bf"
                android:textColorLink="#0071bf"
                android:textStyle="bold"
                app:buttonTint="#00c800" />

            <CheckBox
                android:id="@+id/checkBox6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Selhurst Park, Crystal Palace"
                android:textColor="#0071bf"
                android:textColorLink="#0071bf"
