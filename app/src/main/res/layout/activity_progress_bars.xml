<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/OpenMaps"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/statsbg"
    tools:context="com.example.thomas.progressbar.ProgressBars">

    <!--
    Customised background to add consistency and improve Proof of Concept Prototype
    application. Takes from drawable folder under res and sets as the background.
    -->

    <!--
    Progress Bar remains outside of the Scroll View in order for the Bar to remain visible at all times
    -->

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="600px"
        android:layout_height="50px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250px"
        android:progressBackgroundTint="#0071bf"
        android:progressTint="#f5eff3" />
    <!--
    For styling I used my colour scheme from my logo and UI designs to show consistency and potential prototype look/feel
    -->

    <!--
    Scroll View allows me to hold all of the content in the blank lower half of the interface
    -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="1100px"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--
            Each individual checkbox for each of the 20 Premier League teams is found below
            each has customised colours and they are all unchecked therefore the value is false
            -->

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="The Emirates, Arsenal F.C."
                android:textColor="#0071bf"
                android:textColorLink="#0071bf"
                android:textStyle="bold"
                app:buttonTint="#00c800" />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Vitality Stadium, AFC Bournemouth"
                android:textColor="#0071bf"
                android:textColorLink="#0071bf"
                android:textStyle="bold"
                app:buttonTint="#00c800" />

            <CheckBox
                android:id="@+id/checkBox3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Falmer Stadium, Brighton and Hove Albion"
                android:textColor="#0071bf"
                android:textColorLink="#0071bf"
